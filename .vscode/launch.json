    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "args": [
                "-input=/var/local/mergepdf/input",
                "-merged=/var/local/mergepdf/merged"
            ]
        },
    
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd"
        }
    ]
}